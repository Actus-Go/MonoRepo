    "/api/product/list": {
      "get": {
        "tags": ["Product"],
        "summary": "Fetch products with advanced filters",
        "description": "Fetches a list of products with optional filters for category, price range, rating, sorting, pagination, and wishlist integration.",
        "parameters": [
          {
            "name": "sortOrder",
            "in": "query",
            "required": false,
            "description": "The sorting order for products (e.g., { \"price\": 1 } for ascending price)",
            "schema": {
              "type": "string",
              "example": "{\"price\":1}"
            }
          },
          {
            "name": "rating",
            "in": "query",
            "required": false,
            "description": "Minimum average rating of products to filter by",
            "schema": {
              "type": "number",
              "example": 4
            }
          },
          {
            "name": "max",
            "in": "query",
            "required": false,
            "description": "Maximum price of products to filter by",
            "schema": {
              "type": "number",
              "example": 1000
            }
          },
          {
            "name": "min",
            "in": "query",
            "required": false,
            "description": "Minimum price of products to filter by",
            "schema": {
              "type": "number",
              "example": 100
            }
          },
          {
            "name": "category",
            "in": "query",
            "required": false,
            "description": "Category slug to filter products by",
            "schema": {
              "type": "string",
              "example": "electronics"
            }
          },
          {
            "name": "page",
            "in": "query",
            "required": false,
            "description": "Page number for pagination",
            "schema": {
              "type": "integer",
              "example": 1
            }
          },
          {
            "name": "limit",
            "in": "query",
            "required": false,
            "description": "Number of products per page",
            "schema": {
              "type": "integer",
              "example": 10
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "products": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "name": {
                            "type": "string"
                          },
                          "slug": {
                            "type": "string"
                          },
                          "imageUrl": {
                            "type": "string"
                          },
                          "price": {
                            "type": "number"
                          },
                          "averageRating": {
                            "type": "number"
                          },
                          "isLiked": {
                            "type": "boolean"
                          }
                        }
                      }
                    },
                    "totalPages": {
                      "type": "integer"
                    },
                    "currentPage": {
                      "type": "integer"
                    },
                    "count": {
                      "type": "integer"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Your request could not be processed. Please try again."
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
