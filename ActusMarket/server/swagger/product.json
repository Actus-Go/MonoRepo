    "/api/product/add": {
      "post": {
        "tags": ["Product"],
        "summary": "Add a new product",
        "description": "Adds a new product to the store. Requires authentication and specific roles (Admin, Merchant).",
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "sku": {
                    "type": "string",
                    "description": "Stock Keeping Unit",
                    "example": "PROD-001"
                  },
                  "name": {
                    "type": "string",
                    "description": "Name of the product",
                    "example": "Product Name"
                  },
                  "description": {
                    "type": "string",
                    "description": "Description of the product",
                    "example": "This is a product description."
                  },
                  "quantity": {
                    "type": "integer",
                    "description": "Available quantity of the product",
                    "example": 100
                  },
                  "price": {
                    "type": "number",
                    "description": "Price of the product",
                    "example": 99.99
                  },
                  "taxable": {
                    "type": "boolean",
                    "description": "Indicates if the product is taxable",
                    "example": true
                  },
                  "isActive": {
                    "type": "boolean",
                    "description": "Indicates if the product is active",
                    "example": true
                  },
                  "brand": {
                    "type": "string",
                    "description": "ID of the brand associated with the product",
                    "example": "60c72b2f9b1e8a001c8e4c4b"
                  },
                  "image": {
                    "type": "string",
                    "format": "binary",
                    "description": "Image file for the product"
                  },
                  "coupon": {
                    "type": "string",
                    "description": "ID of the coupon associated with the product",
                    "example": "60c72b2f9b1e8a001c8e4c4c"
                  }
                },
                "required": [
                  "sku",
                  "name",
                  "description",
                  "quantity",
                  "price",
                  "image",
                  "coupon"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Product added successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "message": {
                      "type": "string",
                      "example": "Product has been added successfully!"
                    },
                    "product": {
                      "type": "object",
                      "description": "The added product details",
                      "properties": {
                        "sku": {
                          "type": "string",
                          "example": "PROD-001"
                        },
                        "name": {
                          "type": "string",
                          "example": "Product Name"
                        },
                        "description": {
                          "type": "string",
                          "example": "This is a product description."
                        },
                        "quantity": {
                          "type": "integer",
                          "example": 100
                        },
                        "price": {
                          "type": "number",
                          "example": 99.99
                        },
                        "taxable": {
                          "type": "boolean",
                          "example": true
                        },
                        "isActive": {
                          "type": "boolean",
                          "example": true
                        },
                        "brand": {
                          "type": "string",
                          "example": "60c72b2f9b1e8a001c8e4c4b"
                        },
                        "imageUrl": {
                          "type": "string",
                          "example": "https://example.com/image.jpg"
                        },
                        "imageKey": {
                          "type": "string",
                          "example": "image.jpg"
                        },
                        "productCoupon": {
                          "type": "string",
                          "example": "60c72b2f9b1e8a001c8e4c4c"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Your request could not be processed. Please try again."
                    }
                  }
                }
              }
            }
          }
        }
      }
