{
  "paths": {
    "/api/product/item/{slug}": {
      "get": {
        "tags": ["Product"],
        "summary": "Fetch product by slug",
        "description": "Fetches a product by its slug if it is active and has an active brand associated with it.",
        "parameters": [
          {
            "name": "slug",
            "in": "path",
            "required": true,
            "description": "Slug of the product to fetch",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "sku": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "slug": {
                      "type": "string"
                    },
                    "imageUrl": {
                      "type": "string"
                    },
                    "imageKey": {
                      "type": "string"
                    },
                    "description": {
                      "type": "string"
                    },
                    "quantity": {
                      "type": "integer"
                    },
                    "price": {
                      "type": "number"
                    },
                    "productCoupon": {
                      "type": "string",
                      "description": "ObjectId reference to the Coupon"
                    },
                    "taxable": {
                      "type": "boolean"
                    },
                    "isActive": {
                      "type": "boolean"
                    },
                    "brand": {
                      "type": "string",
                      "description": "ObjectId reference to the Brand"
                    },
                    "updated": {
                      "type": "string",
                      "format": "date-time"
                    },
                    "created": {
                      "type": "string",
                      "format": "date-time"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "No product found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "No product found."
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Your request could not be processed. Please try again."
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
